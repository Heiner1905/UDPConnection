<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MessageController"
      spacing="10" prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Título -->
    <Label text="Chat UDP" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Área de mensajes -->
    <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="250" />

    <!-- Configuración remota -->
    <HBox spacing="10">
        <TextField fx:id="ipField" promptText="IP Destino" />
        <TextField fx:id="portField" promptText="Puerto Destino" />
    </HBox>

    <!-- Envío de mensaje -->
    <HBox spacing="10">
        <TextField fx:id="messageInput" promptText="Escribe un mensaje..." HBox.hgrow="ALWAYS"/>
        <Button text="Enviar" onAction="#sendMessage"/>
    </HBox>
</VBox>
